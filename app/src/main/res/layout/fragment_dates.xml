<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#062639"
    tools:context="Fragments.DatesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Booking Date"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:text="Check-in"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Check-out"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/bookingdate"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="08/06/23"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_date"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:text="select date"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/out_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="select date"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Rooms"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Adults"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Children"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:padding="4dp"
                android:background="#C9D6CF">

                <Button
                    android:id="@+id/subtract"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/subst" />

                <TextView
                    android:id="@+id/textroomno"
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:hint="0"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColorHint="@color/black" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:padding="4dp"
                android:background="#C9D6CF">

                <Button
                    android:id="@+id/subtract1"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/subst" />

                <TextView
                    android:id="@+id/adults"
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:hint="0"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColorHint="@color/black" />
                <Button
                    android:id="@+id/add1"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus"
                    tools:ignore="InvalidId" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:padding="4dp"
                android:background="#C9D6CF">

                <Button
                    android:id="@+id/subtract2"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/subst" />

                <TextView
                    android:id="@+id/children"
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:hint="0"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColorHint="@color/black" />
                <Button
                    android:id="@+id/add2"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus" />


            </LinearLayout>



        </LinearLayout>


        <Button
            android:id="@+id/selectroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/loginbutton"
            android:padding="6dp"
            android:text="SELECT ROOMS"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_margin="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/linear"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Duration"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="6dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Rooms"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalrooms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Adults"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="6dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noadults"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Children"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalchildren"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textStyle="bold" />


            </LinearLayout>





        </LinearLayout>




    </LinearLayout>




</ScrollView>