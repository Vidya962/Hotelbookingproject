<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="vv9068962@gmail.com"
                android:textSize="16sp"
                android:textColor=" #5632B2"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor=" #5632B2"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_logout_24"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:background="@drawable/admin"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="Hotel Management Admin"
                android:textSize="20dp"
                android:padding="6dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#5632B2"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:orientation="vertical">


            <TextView
                android:id="@+id/Room_manage"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Room Management"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/admin_bg"
                android:gravity="center"/>


            <TextView
                android:id="@+id/promo"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Promo Codes/Discounts"
                android:textColor="@color/white"
                android:padding="6dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/admin_bg"
                android:gravity="center"/>

            <TextView
                android:id="@+id/extra"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Extra Facility"
                android:padding="6dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/admin_bg"
                android:gravity="center"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Bookings(Datevise)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="6dp"
                android:textStyle="bold"
                android:background="@drawable/admin_bg"
                android:gravity="center"/>


            <TextView
                android:id="@+id/room"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Bookings(roomvise)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="6dp"
                android:textStyle="bold"
                android:background="@drawable/admin_bg"
                android:gravity="center"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="316dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Bookings(namevise)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="6dp"
                android:textStyle="bold"
                android:background="@drawable/admin_bg"
                android:gravity="center"/>











        </LinearLayout>















    </LinearLayout>

</LinearLayout>